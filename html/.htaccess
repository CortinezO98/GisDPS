# Habilita la reescritura
RewriteEngine On

# Fuerza HTTPS si no está activo (útil incluso detrás de proxy si no usas SetEnv HTTPS)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirigir automáticamente / a index.php si no se especifica
DirectoryIndex index.php

# Reglas de ejemplo seguras (puedes personalizar luego)
# Evita errores 404 por falta de extensiones
<FilesMatch "\.(php|html|htm)$">
    Require all granted
</FilesMatch>


# Protege archivos ocultos
<FilesMatch "^\.">
    Require all denied
</FilesMatch>
